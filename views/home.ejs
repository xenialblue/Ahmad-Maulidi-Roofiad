    <!-- Navbar End -->

    <!-- Hero Section start -->
    <section class="hero" id="home">
        <main class="content">
            <h1>Mari ikuti perlombaan<span> Marathon</span></h1>
            <p>
                <b>MENS SANA IN CORPORE SANO</b><br />
